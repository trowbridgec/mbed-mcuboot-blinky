{
    "config": {
        "demo-button": {
            "macro_name": "DEMO_BUTTON",
            "required": true
        },
        "demo-button-active-low": {
            "help": "true if the button state is low when pressed, high when released",
            "macro_name": "DEMO_BUTTON_ACTIVE_LOW",
